#!/usr/bin/env php
<?php declare(strict_types=1);

require_once __DIR__ . '/../vendor/autoload.php';

define('ROOT_DIR', dirname(__DIR__));

use App\Services\Database;

// Initialize database path
$dbPath = ROOT_DIR . '/storage/database/cms.db';
Database::init($dbPath);

echo "ğŸ”§ MTA CMS Database Migration\n";
echo "================================\n\n";

try {
    // Check if database already exists
    if (file_exists($dbPath)) {
        echo "âš ï¸  Database already exists at: $dbPath\n";
        echo "Do you want to recreate it? This will DELETE all existing data! (yes/no): ";
        $handle = fopen("php://stdin", "r");
        $line = trim(fgets($handle));
        fclose($handle);
        
        if (strtolower($line) !== 'yes') {
            echo "âŒ Migration cancelled.\n";
            exit(0);
        }
        
        unlink($dbPath);
        echo "ğŸ—‘ï¸  Old database deleted.\n\n";
    }

    // Run migration
    echo "ğŸ“¦ Creating database structure...\n";
    $tablesDir = ROOT_DIR . '/server/data/tables';
    if (!is_dir($tablesDir)) {
        throw new Exception("Tables directory not found: $tablesDir");
    }

    $sqlFiles = glob($tablesDir . '/*.sql');
    sort($sqlFiles); // Ensure consistent order

    foreach ($sqlFiles as $file) {
        $fileName = basename($file);
        echo "  - Loading table: $fileName\n";
        Database::runMigration($file);
    }

    // Run seeding
    $seedFile = ROOT_DIR . '/server/data/seed.sql';
    if (file_exists($seedFile)) {
        echo "\nğŸŒ± Seeding default data...\n";
        Database::runMigration($seedFile);
    }

    echo "\nâœ… Database created successfully!\n";
    echo "ğŸ“ Location: $dbPath\n\n";
    
    // Verify tables
    echo "ğŸ“‹ Verifying tables...\n";
    $tables = [
        'users', 'posts', 'pages', 'categories', 'tags', 'post_tags',
        'media', 'products', 'product_images', 'customers',
        'orders', 'order_items', 'settings', 'sessions'
    ];
    
    foreach ($tables as $table) {
        if (Database::tableExists($table)) {
            echo "  âœ“ $table\n";
        } else {
            echo "  âœ— $table (MISSING!)\n";
        }
    }
    
    echo "\nâœ¨ Migration completed successfully!\n";
    echo "\nğŸ“ Default admin credentials:\n";
    echo "   Username: admin\n";
    echo "   Password: admin123\n";
    echo "   âš ï¸  Please change the password after first login!\n";
    
} catch (Exception $e) {
    echo "\nâŒ Migration failed: " . $e->getMessage() . "\n";
    exit(1);
}
